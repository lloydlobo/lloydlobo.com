@keyframes rotation {
from {
transform: translateX(0);
}
to {
transform: translateX(-50%);
}
}

@keyframes rotation2 {
to {
transform: translateX(-100%);
}
}

.bg-black {
background-color: #000;
}

.globe {
background-color: #020;
border: 0px solid #8bc34a;
border-radius: 50%;
height: 140px;
width: 140px;
overflow: hidden;
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
}

.globe svg path {
stroke: #080;
}

.line-wrap {
color: #f11;
position: absolute;
left: 50%;
top: 50%;
margin: -12px 0 0 -100px;
font: 20px arial;
width: 200px;
overflow: hidden;
}

.line-wrap .line {
white-space: nowrap;
line-height: 20px;
animation: rotation2 4s linear 0s infinite;
}

.globe svg {
animation: rotation 8s linear 0s infinite;
}
